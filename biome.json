{
  "$schema": "https://biomejs.dev/schemas/1.6.1/schema.json",
  "organizeImports": {
    "enabled": true
  },
  "linter": {
    "enabled": true,
    "rules": {
      "recommended": true
    },
    "include": ["./app", "./components", "./lib"]
  },
  "formatter": {
    "enabled": true,
    "include": ["./app", "./components", "./lib"],
    "formatWithErrors": false
  }
}
